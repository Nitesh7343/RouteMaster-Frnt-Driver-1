{
  "name": "routemaster-backend",
  "version": "1.0.0",
  "description": "RouteMaster Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "test": "node test-integration.js",
    "test:driver": "node test-driver-socket.js",
    "test:user": "node test-user-socket.js",
    "test:quick": "curl -s http://localhost:5001/health",
    "setup": "node setup-test.js",
    "scaling:example": "node examples/scaling-example.js",
    "scaling:test": "node examples/scaling-test-client.js",
    "verify": "node scripts/verify.js",
    "verify:health": "curl -s http://localhost:5001/health | jq .",
    "verify:auth": "node scripts/verify.js --auth-only",
    "verify:socket": "node scripts/verify.js --socket-only",
    "verify:geo": "node scripts/verify.js --geo-only",
    "verify:workers": "node scripts/verify.js --workers-only",
    "verify:summary": "node scripts/verify-summary.js"
  },
  "keywords": [
    "routemaster",
    "backend",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@socket.io/mongo-adapter": "^0.4.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "node-cron": "^4.2.1",
    "redis": "^4.6.13",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
